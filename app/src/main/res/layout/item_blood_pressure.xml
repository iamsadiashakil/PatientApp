<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="4dp"
    android:background="@color/white"> <!-- White background for each row -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Reading (Blood Pressure) -->
        <TextView
            android:id="@+id/reading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="120/80 mmHg"
            android:textSize="16sp"
            android:textColor="#212121"
            android:textStyle="bold" />

        <!-- Measured At (Date and Time) -->
        <TextView
            android:id="@+id/measured_at"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="2025-04-29 10:30 AM"
            android:textSize="14sp"
            android:textColor="#757575" /> <!-- Gray color for secondary text -->

        <!-- Status -->
        <TextView
            android:id="@+id/status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Normal"
            android:textSize="14sp"
            android:textColor="#4CAF50" /> <!-- Green for normal, red for high -->
    </LinearLayout>
</androidx.cardview.widget.CardView>