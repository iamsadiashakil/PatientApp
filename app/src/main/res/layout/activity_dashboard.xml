<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activities.DashboardActivity">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/toolbar_bg_color"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/app_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Patient App"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/user"
            android:contentDescription="Profile Icon"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- Main Content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp">

        <GridLayout
            android:id="@+id/dashboardGrid"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:columnCount="2"
            android:rowCount="3"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Blood Pressure Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardBloodPressure"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                card_view:cardCornerRadius="16dp"
                card_view:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <!-- Image container with weight for proper distribution -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/blood_pressure"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Blood Pressure"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="start"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:paddingHorizontal="4dp"/>

                    <TextView
                        android:id="@+id/bloodPressureReading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="120/80 mmHg"
                        android:textSize="17sp"
                        android:textColor="#666"
                        android:gravity="start"
                        android:maxLines="2"
                        android:paddingHorizontal="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Pulse Rate Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardPulseRate"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                card_view:cardCornerRadius="16dp"
                card_view:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/pulse"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pulse Rate"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="start"
                        android:maxLines="2"
                        android:paddingHorizontal="4dp"/>

                    <TextView
                        android:id="@+id/pulseReading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="76 bpm"
                        android:textSize="17sp"
                        android:textColor="#666"
                        android:gravity="start"
                        android:maxLines="2"
                        android:paddingHorizontal="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Sugar Level Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardSugarLevel"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                card_view:cardCornerRadius="16dp"
                card_view:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/sugar"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sugar Level"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="start"
                        android:maxLines="2"
                        android:paddingHorizontal="4dp"/>

                    <TextView
                        android:id="@+id/sugarLevel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="95 mg/dl"
                        android:textSize="17sp"
                        android:textColor="#666"
                        android:gravity="start"
                        android:maxLines="2"
                        android:paddingHorizontal="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Blood Oxygen Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardBloodOxygen"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                card_view:cardCornerRadius="16dp"
                card_view:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/oxygen"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Blood Oxygen"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="start"
                        android:maxLines="2"
                        android:paddingHorizontal="4dp"/>

                    <TextView
                        android:id="@+id/bloodOxygenReading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="97%"
                        android:textSize="17sp"
                        android:textColor="#666"
                        android:gravity="start"
                        android:maxLines="2"
                        android:paddingHorizontal="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Body Temperature Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardBodyTemperature"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                card_view:cardCornerRadius="16dp"
                card_view:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/body_temperature"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Body Temperature"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="start"
                        android:maxLines="2"
                        android:paddingHorizontal="4dp"/>

                    <TextView
                        android:id="@+id/bodyTemperatureReading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="98.6°F"
                        android:textSize="17sp"
                        android:textColor="#666"
                        android:gravity="start"
                        android:maxLines="2"
                        android:paddingHorizontal="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Allergies Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAllergies"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                card_view:cardCornerRadius="16dp"
                card_view:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:padding="10dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/allergic" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:maxLines="2"
                        android:paddingHorizontal="4dp"
                        android:text="Allergies"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/allergies"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:maxLines="1"
                            android:paddingHorizontal="4dp"
                            android:text="Penicillin"
                            android:textColor="#666"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/more_allergies"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:maxLines="1"
                            android:paddingEnd="4dp"
                            android:text="(+4)"
                            android:textColor="#FF8400"
                            android:textSize="17sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="5dp"
        android:contentDescription="Chat Button"
        android:src="@drawable/chat"
        app:backgroundTint="@color/toolbar_bg_color"
        app:tint="@color/white" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>